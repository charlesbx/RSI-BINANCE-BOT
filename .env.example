# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TLD=com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=destination@gmail.com

# Trading Configuration
DEFAULT_RSI_PERIOD=14
DEFAULT_RSI_OVERBOUGHT=70
DEFAULT_RSI_OVERSOLD=30
DEFAULT_TRADE_SYMBOL=ETHUSDT
DEFAULT_TRADE_QUANTITY=1000

# Trading Mode Configuration
# Options: "spot" or "futures"
TRADING_MODE=spot

# Futures Configuration (only used when TRADING_MODE=futures)
# Leverage: 1-125 (check Binance limits for your symbol)
DEFAULT_LEVERAGE=5
# Margin type: "isolated" or "cross"
MARGIN_TYPE=isolated

# Risk Management Configuration
# Maximum percentage of account balance to risk per trade (0.5-5.0 recommended)
MAX_RISK_PER_TRADE_PCT=2.0
# Maximum allowed drawdown percentage before stopping bot (5.0-20.0 recommended)
MAX_DRAWDOWN_PCT=10.0
# Use dynamic position sizing based on risk (true/false)
DYNAMIC_POSITION_SIZING=true

# Bot Configuration
SIMULATION_MODE=true
LOG_LEVEL=INFO
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEB_DASHBOARD=true

# Dashboard Configuration
DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0
FRONTEND_PORT=3000

# Database (optional - for trade history)
DATABASE_URL=sqlite:///data/trades.db
